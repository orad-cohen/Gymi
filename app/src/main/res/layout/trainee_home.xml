<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="40dp"
   >


    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_weight="1"
        >


        <Button
            android:id="@+id/startWorkout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="startWorkout"
            android:text="Start workout"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/workoutReports"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="workoutReports"
            android:text="Previous workouts"
            android:layout_weight="1"/>
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/chatTrainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="chatTrainer"
            android:text="Chat Trainer" />

        <Button
            android:id="@+id/newTrainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="newTrainer"
            android:text="New Trainer" />
</TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/bt1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="getRole"
            android:text="What's my Role?" />

        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="getName"
            android:text="What's my Name" />
    </TableRow>


</TableLayout>